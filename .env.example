# Environment Variables Template
# Copy this to .env and fill in your values

# ==========================================
# DATABASE
# ==========================================
# Local PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/ml_analytics

# Railway/Heroku (managed):
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# ==========================================
# JWT SECRET
# ==========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE-THIS-TO-RANDOM-STRING

# ==========================================
# CORS
# ==========================================
# Development:
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Production:
# ALLOWED_ORIGINS=https://yourdomain.com

# ==========================================
# BLOCKCHAIN (Optional)
# ==========================================
BLOCKCHAIN_URL=http://127.0.0.1:8545

# ==========================================
# FLASK
# ==========================================
# Development:
FLASK_ENV=development

# Production:
# FLASK_ENV=production

# ==========================================
# DEV LOGIN (FOR TESTING ONLY)
# ==========================================
# Enable temporary dev login endpoint (no wallet UI needed)
# ⚠️ MUST be set to false in production!
DEV_LOGIN_ENABLED=true

# Production:
# DEV_LOGIN_ENABLED=false
